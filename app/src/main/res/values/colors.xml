<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Morandi Color Palette - Light Mode -->
    <!--
        Morandi colors are characterized by low saturation and warm gray undertones.
        Primary: Dusty Blue (#6B7B8C) - Muted, sophisticated blue-gray
        Secondary: Sage Green (#8FA395) - Soft, natural green-gray
        Tertiary: Dusty Rose (#C9ADA7) - Warm, muted pink-gray
    -->

    <!-- Primary Colors - Dusty Blue -->
    <color name="md_theme_light_primary">#6B7B8C</color>
    <color name="md_theme_light_onPrimary">#FFFFFF</color>
    <color name="md_theme_light_primaryContainer">#D5DBE3</color>
    <color name="md_theme_light_onPrimaryContainer">#1A2632</color>

    <!-- Secondary Colors - Sage Green -->
    <color name="md_theme_light_secondary">#8FA395</color>
    <color name="md_theme_light_onSecondary">#FFFFFF</color>
    <color name="md_theme_light_secondaryContainer">#D8E0DA</color>
    <color name="md_theme_light_onSecondaryContainer">#1F2B23</color>

    <!-- Tertiary Colors - Dusty Rose -->
    <color name="md_theme_light_tertiary">#C9ADA7</color>
    <color name="md_theme_light_onTertiary">#FFFFFF</color>
    <color name="md_theme_light_tertiaryContainer">#E8DDD9</color>
    <color name="md_theme_light_onTertiaryContainer">#3D2F2C</color>

    <!-- Error Colors - Muted Brick Red -->
    <color name="md_theme_light_error">#C17B74</color>
    <color name="md_theme_light_onError">#FFFFFF</color>
    <color name="md_theme_light_errorContainer">#EED5D2</color>
    <color name="md_theme_light_onErrorContainer">#4A2522</color>

    <!-- Background & Surface - Warm Grays -->
    <color name="md_theme_light_background">#F7F5F3</color>
    <color name="md_theme_light_onBackground">#3D3A38</color>
    <color name="md_theme_light_surface">#FFFDFB</color>
    <color name="md_theme_light_onSurface">#3D3A38</color>
    <color name="md_theme_light_surfaceVariant">#E8E4E1</color>
    <color name="md_theme_light_onSurfaceVariant">#6B6561</color>

    <!-- Outlines -->
    <color name="md_theme_light_outline">#A69C94</color>
    <color name="md_theme_light_outlineVariant">#D5CFC9</color>
    <color name="md_theme_light_scrim">#000000</color>

    <!-- Inverse Colors -->
    <color name="md_theme_light_inverseSurface">#3D3A38</color>
    <color name="md_theme_light_inverseOnSurface">#F7F5F3</color>
    <color name="md_theme_light_inversePrimary">#9AACBD</color>

    <!-- Legacy Colors for Backward Compatibility -->
    <color name="primary">@color/md_theme_light_primary</color>
    <color name="primary_dark">#5A6979</color>
    <color name="accent">@color/md_theme_light_secondary</color>
    <color name="text_primary">@color/md_theme_light_onBackground</color>
    <color name="text_secondary">@color/md_theme_light_onSurfaceVariant</color>
    <color name="background">@color/md_theme_light_background</color>

    <!-- Radar Colors - Morandi Style -->
    <color name="radar_background">#F0EDE9</color>
    <color name="radar_line">#8E9AAF</color>
    <color name="radar_text">@color/md_theme_light_onBackground</color>

    <!-- Status Colors - Muted Morandi Tones -->
    <color name="success">#8FA395</color>
    <color name="success_container">#D8E0DA</color>
    <color name="warning">#D4B894</color>
    <color name="warning_container">#F5EBE0</color>
    <color name="info">#8E9AAF</color>
    <color name="info_container">#DDE3EB</color>

    <!-- Surface Colors - Warm Gray Scale -->
    <color name="surface_1">#FAF8F6</color>
    <color name="surface_2">#F5F3F0</color>
    <color name="surface_3">#EBE8E4</color>

    <!-- General UI Colors -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="transparent">#00000000</color>
</resources>
